extends ../../layout/default.pug
include ../../mixins/alert.pug
block main 
    +alert-error(3000)
    h1(class="mb-4") Thêm mới một sản phẩm 
    form(
        action=`${prefixAdmin}/roles/edit/${data.id}?_method=PATCH`
        method="POST"
    ) 
        div(class = "form-group")
            label(for="title")  Tiêu đề 
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value = data.title
                required
                )
        div(class = "form-group ")
            label(for="desc") Mô tả  
            textarea(
                type="text"
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows="5"
                
                ) !{data.description}
        div(class = "form-group")
           button(
            type="submit"
            class="btn btn-primary"
            ) Cập nhật  
    