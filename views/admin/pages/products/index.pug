extends ../../layout/default.pug
include ../../mixins/filter-status
include ../../mixins/search
include ../../mixins/pagination
include ../../mixins/form-change-multi
include ../../mixins/alert
include ../../mixins/sort
include ../../mixins/moment
block main

  if(role.permissions.includes("products_view"))
    +alert-success("5000")
    h1 Danh sách sản phẩm

    .card.mb-3 
        .card-header Bộ lọc tìm kiếm 
        .card-body 
         .row
            .col-6
                +filter-status(filterStatus)

            .col-6
                +search(keyword)

                  
    .card.mb-3 
        .card-header Bộ lọc tìm kiếm 
            .card-body
                .row 
                    .col-8 
                        +form-change-multi(`${prefixAdmin}/product/change-multi?_method=PATCH`)
                    .col-4 
                    if(role.permissions.includes("products_view"))
                        a(
                            href = `${prefixAdmin}/product/create`
                            class="btn btn-outline-success"
                        ) + Thêm mới 
    .card.mb-3 
            .card-header Sắp xếp 
                .card-body
                    .row 
                        .col-4 
                           +sort()

                table(
                    class="table table-hover table-sm"
                    checkbox-multi 
                )    
                    thead 
                        tr 
                            th 
                                input(type="checkbox" name="checkall")
                            th STT 
                            th Hình ảnh
                            th Tiêu đề
                            th Giá
                            th Vị trí
                            th Người tạo 
                            th Trạng thái 
                            th Hành động

                    tbody
                        each item,index in products
                            tr 
                                td
                                    input(
                                        type="checkbox"
                                        name="id"
                                        value=item.id
                                    )
                                td #{pagination.litmitItems*(pagination.currentPage -1) + (index +1)}
                                td 
                                    img(
                                        src=item.thumbnail
                                        alt =item.title
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.title}
                                td #{item.price}$
                                td 
                                    input(
                                        type="number"
                                        value = item.position 
                                        style = "width: 60px"
                                        min="1"
                                        name = "position"
                                    )
                                td
                                    p #{item.accountFullName}
                                    p 
                                    +formatDateTime(item.createdBy.createAt)
                                   
                                td 
                                    if(role.permissions.includes("products_edit"))
                                        if(item.status == "active")
                                            a(href="javascript:;" 
                                                data-status=item.status 
                                                data-id=item.id
                                                button-change-status
                                                class="badge badge-success"
                                            ) Hoạt động
                                        else 
                                            a(
                                                href="javascript:;" 
                                                data-status=item.status 
                                                data-id=item.id 
                                                button-change-status
                                                class="badge badge-danger"
                                            ) Không hoạt động
                                    else 
                                        if(item.status == "active")
                                            <span class="badge badge-success">Hoạt động</span>
                                        else 
                                            <span class="badge badge-danger">Không hoạt động</span>
                                td 
                                    a(
                                        href=`${prefixAdmin}/product/detail/${item.id}`
                                        class="btn btn-secondary btn-sm") Chi tiết 
                                    if(role.permissions.includes("products_edit"))      
                                        a(
                                            href=`${prefixAdmin}/product/edit/${item.id}`
                                            class="btn btn-warning btn-sm") Sửa
                                    if(role.permissions.includes("products_delete"))
                                        button(class="btn btn-danger btn-sm ml-1" 
                                        button-delete
                                        data-id= item.id 

                                        ) Xóa
    +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/product/change-status`
    )
    form(
        action=""
        method="POST"
        id="form-delete-item"
        data-path=`${prefixAdmin}/product/delete`
    )


    script(src="/admin/js/product.js") 